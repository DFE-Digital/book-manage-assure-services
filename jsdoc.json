{
    "source": {
      "include": ["./app/controllers"],  
      "includePattern": ".+\\.js(doc|x)?$", // Pattern to find JavaScript files
      "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [
      "plugins/markdown" // Enables markdown support in JSDoc comments
    ],
    "templates": {
      "cleverLinks": false,
      "monospaceLinks": false
    },
    "opts": {
      "encoding": "utf8",       // Encoding of the source files
      "destination": "./docs/", // Directory where the documentation will be output
      "recurse": true,          // Include subdirectories
      "verbose": true           // Print more information while generating docs
    }
  }